FATLIB = ../../src/fat_io_lib

OBJ = main.o 
OBJ += $(FATLIB)/fat_access.o
OBJ += $(FATLIB)/fat_cache.o
OBJ += $(FATLIB)/fat_filelib.o
OBJ += $(FATLIB)/fat_format.o
OBJ += $(FATLIB)/fat_misc.o
OBJ += $(FATLIB)/fat_string.o
OBJ += $(FATLIB)/fat_table.o
OBJ += $(FATLIB)/fat_write.o

INC = -I$(FATLIB)

CC = gcc

#CFLAGS = -g
CFLAGS += -Wall -Wextra
#CFLAGS += -pedantic --verbose
#CFLAGS += -E -P

all: fat

fat: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o fat

$(OBJ) : %.o : %.c
	$(CC) $(CFLAGS) -c $(INC) -o $@ $<

clean:
	rm *.o
	rm $(FATLIB)/*.o
	rm fat